# Solana RPC URL (mainnet)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# Wallet private key (base58 string - DO NOT share)
# Export from Phantom: Settings > Security > Export Private Key
# Or from Solana CLI: cat ~/.config/solana/id.json (then convert to base58)
PRIVATE_KEY=your_base58_private_key_here

# Trade settings
TRADE_PERCENT=0.2
BUY_THRESHOLD=1
SELL_THRESHOLD=1
COOLDOWN_SECONDS=60

# Slippage in basis points (50 = 0.5%)
SLIPPAGE_BPS=50

# RPC commitment level
COMMITMENT=confirmed
