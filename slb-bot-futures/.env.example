# Solana RPC (Use Helius free tier)
SOLANA_RPC_URL=https://mainnet.helius-rpc.com/?api-key=YOUR_HELIUS_KEY
PRIVATE_KEY=your_base58_private_key_from_phantom

# Trading Settings
LEVERAGE=50
TRADE_AMOUNT_USDC=10

# Active Markets (comma-separated list of markets to trade)
ACTIVE_MARKETS=SOL-PERP,BTC-PERP,ETH-PERP

# SIMULATION MODE - Set to true for paper trading, false for real money
SIMULATION_MODE=true

# Global Thresholds
IMBALANCE_THRESHOLD=0.15
VOLATILITY_THRESHOLD=0.5

# Market-Specific Risk Settings (optional - uses defaults if not set)
# SOL-PERP (more volatile - wider stops)
SOL_STOP_LOSS=0.8
SOL_TAKE_PROFIT=1.2

# BTC-PERP (less volatile - tighter stops)
BTC_STOP_LOSS=0.5
BTC_TAKE_PROFIT=0.8

# ETH-PERP (medium volatility)
ETH_STOP_LOSS=0.6
ETH_TAKE_PROFIT=1.0

# Timing
COOLDOWN_SECONDS=120
BASE_INTERVAL_MS=30000

# Dashboard Port (access via http://your-vps-ip:3000)
DASHBOARD_PORT=3000
